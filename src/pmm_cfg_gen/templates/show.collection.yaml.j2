collections:
  "{{ item.metadata.title }}":
    {%- set lstCollection = item.metadata | getTmDbCollectionId(true) | concat(item.pmm.collection) | unique | join(", ") | default("") %}
    {%- set lstList = "" %}
    {%- set lstShow = item.metadata | getCollectionGuidsByName("tmdb") | concat(item.pmm.movie) | unique | join(", ") %}
    {%- set lstMovie = "" %}
    {%- set lstLabels = item.metadata | getNamedCollectionLabels | concat(item.pmm.label) | unique | join(", ") %}
    variables: { {% if lstLabels %}label: "{{ lstLabels }}", {% endif %}{% if item.pmm.sort.prefix %}sort_prefix: "{{item.pmm.sort.prefix}}", {% endif %}{% if item.pmm.sort.order %}sort_order: "{{ item.pmm.sort.order }}", {% endif %}{% if item.pmm.sort.separator %}sort_separator: "{{ item.pmm.sort.separator }}", {% endif %}{% if lstCollection | length > 0 %}collection: "{{ lstCollection }}", {% endif %}{% if lstList | length > 0 %}list: "{{ lstList }}", {% endif %}{% if lstMovie | length > 0 %}movie: "{{ lstMovie }}", {% endif %}{% if lstShow | length > 0 %}show: "{{ lstShow }}", {% endif %}{% if settings.thePosterDatabase.dbAssetUrl %}poster: {{ item.pmm.poster | default(settings.thePosterDatabase.dbAssetUrl, True) }}{% endif %} }
    template: [ { name: tplCommonBase }, { name: tplCommonCollection }, { name: tplTMDBCollection } ]
    {%- if item.metadata.summary %}
    summary: |
      {{ item.metadata.summary.rstrip() }}{%- endif %}
    # tpdb: {{ item.metadata | generateTpDbSearchUrl }}
    # tmdb: https://www.themoviedb.org/search/collection?query={{ item.metadata.title | quote | urlencode}}
    # tvdb: https://thetvdb.com/search?menu%5Btype%5D=list&query={{ item.metadata.title | urlencode }}
    # imdb: https://www.imdb.com/find/?s=tt{% if item.metadata.subtype == 'movie' %}&ttype=ft{% elif item.metadata.subtype == 'show' %}&ttype=tv{% endif %}&q={{ item.metadata.title | urlencode }}
    # trakt: https://trakt.tv/search/lists?query={{ item.metadata.title | urlencode }}
    {% if item.metadata.childCount != 1 %}# {% endif %}collection_mode: hide
    {% if not item.pmm.trakt %}# {% endif %}trakt_list:
    {%- if not item.pmm.trakt %}
    #   -{% else %}
    {%- for t in item.pmm.trakt %}
       - {{ t }} {% endfor %}{% endif %}

