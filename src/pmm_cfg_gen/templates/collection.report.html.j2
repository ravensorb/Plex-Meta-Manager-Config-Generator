<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Plex Collection Search List</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<body>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">title</th>
                <th scope="col">tpdb</th>
                <th scope="col">tmdb</th>
                <th scope="col">tvdb</th>
                <th scope="col">imdb</th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
            <tr>
                <td scope="row">{{ loop.index }} </td>
                <td scope="row">{{ item.title }} </td>
                <td scope="row"><a target="_blank" href="{{item.searchUrl}}">Search thePosterDb</a></td>
                <td scope="row"><a target="_blank" href="https://www.themoviedb.org/search/collection?query={{ item.title | urlencode}}">Search theMovieDb</a></td>
                <td scope="row"><a target="_blank" href="https://thetvdb.com/search?menu%5Btype%5D=list&query={{ item.title | urlencode }}">Search tvDb</a></td>
                <td scope="row"><a target="_blank" href="https://www.imdb.com/find/?s=tt{% if item.metadata.subtype == 'movie' %}&ttype=ft{% elif item.metadata.subtype == 'show' %}&ttype=tv{% endif %}&q={{ item.title | urlencode }}">Search IMDb</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
