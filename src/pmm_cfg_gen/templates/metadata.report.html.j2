<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Plex Item Search List</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<body>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">title</th>
                <th scope="col">tpdb</th>
                <th scope="col">tmdb</th>
                <th scope="col">tvdb</th>
                <th scope="col">imdb</th>
                <th scope="col">ids</th>s</th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
            <tr>
                <td scope="row">{{ loop.index }} </td>
                <td scope="row">{{ item.title }} </td>
                <td scope="row"><a target="_blank" href="{{item.searchUrl}}">Search thePosterDb</a></td>
                <td scope="row">{% if item.metadata | getItemGuidByName("tmdb") | default("") | length > 0 %}<a target="_blank" href="https://www.themoviedb.org/{% if item.metadata.type == "movie" %}movie{% elif item.metadata.type == "show" %}tv{% else %}{% endif %}/{{ item.metadata | getItemGuidByName("tmdb") }}">Search theMovieDb</a>{% endif %}</td>
                <td scope="row">{% if item.metadata | getItemGuidByName("tvdb") | default("") | length > 0 %}<a target="_blank" href="https://thetvdb.com/search?menu%5Btype%5D={% if item.metadata.type == "movie"%}movie{% elif item.metadata.type == "show" %}series{% else %}{% endif %}&menu%5Byear%5D={{ item.metadata.year }}&query={{ item.metadata | getItemGuidByName("tvdb") }}">Search tvDb</a>{% endif %}</td>
                <td scope="row">{% if item.metadata | getItemGuidByName("imdb") | default("") | length > 0 %}<a target="_blank" href="https://www.imdb.com/title/{{ item.metadata | getItemGuidByName("imdb") }}">Search imDb</a>{% endif %}</td>
                <td scope="row">{{ item.ids.items() | join(", " )}}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
